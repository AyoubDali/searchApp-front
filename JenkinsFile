pipeline{
    agent any
    environment{
        DOCKER_TAG = getDockerTag()
    }
    stages{
        stage('Build docker image'){
          steps{
              dockerImage = docker.build("ayoubdali/searchapp-front:${DOCKER_TAG}")
          }  
        }
        stage('push docker image to docker hub'){
          steps{
              dockerImage.push()
          }  
        }
    }

}



    def getDockerTag(){
        def tag = sh script: 'git rev-parse HEAD', returnStdout: true
        return tag
    }