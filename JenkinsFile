pipeline{
    agent any
    environment{
        DOCKER_TAG = getDockerTag()
    }
    stages{
        stage('Build docker image'){
          steps{
              sh "docker build . -t ayoubdali/searchapp-front:${DOCKER_TAG} "
          }  
        }
        stage('push docker image to docker hub'){
          steps{
              sh "docker push ayoubdali/searchapp-front:${DOCKER_TAG} "
          }  
        }
    }

}



    def getDockerTag(){
        def tag = sh script: 'git rev-parse HEAD', returnStdout: true
        return tag
    }